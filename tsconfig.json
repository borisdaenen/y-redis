{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "lib": ["es2022", "dom"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "strict": true,
    "noImplicitAny": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts", "src/**/*.js", "bin/**/*.ts", "bin/**/*.js"],
  "exclude": ["**/dist", "./demos/blocksuite/"]
}
